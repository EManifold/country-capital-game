<link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:600&display=swap" rel="stylesheet">
<link rel="stylesheet" href="/stylesheets/results.css">

<div id="score">
  <h1>You scored <%= @game.score %>/10</h1>
</div>
<div id="play-again">
  <form action="/play-again" method="post">
    <input type="submit" value="Play again" name="play-again">
  </form>
</div>

<% if @results[0] == 'correct' %>
  <div id="correct">
    <h2>The first country was <%= @questions[0][0] %></h2>
    <h4>You answered <%= @answers[0] %>. You were correct! </h4>
  </div>
<% else %>
  <div id="wrong">
    <h2>The first country was <%= @questions[0][0] %></h2>
    <h4>You answered <%= @answers[0] %> but the answer was <%= @questions[0][1] %>. You were incorrect. </h4>
  </div>
<% end %>

